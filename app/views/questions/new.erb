<div class="container">

  <h1>Submit a New Question</h1>

  <form action="/questions" method="POST">
    <input type="text" name="question[title]" placeholder="Enter title here" value="<%= @question.title %>"/>
    <textarea name="question[body]" placeholder="Enter question body" cols="50" rows="10" ><%= @question.body %></textarea>
    <input type="submit" value="Submit Question" />
  </form>
</div>
