<% comments.each do |comment| %>
  <div id="comment-wrapper">

    <div class="voting-area">
      <span class="up-vote">
        <%= erb :"votes/_up_vote", locals: {post: comment} %>
      </span>
      <span class="score">
        <%= Vote.tally(comment) %>
      </span>
      <span class="down-vote">
        <%= erb :"votes/_down_vote", locals: {post: comment} %>
      </span>
    </div>

    <div class="comment-body">
      <p><%= comment.body %></p>
      <span><%= comment.author_username %> - <%= comment.formatted_post_date %></span>
    </div>

    <div class="edit-comment-button">
      <% if logged_in? && user_is_author(comment.author_id) %>
        <a href="/comments/<%=comment.id%>/edit">Edit</a>
        <form action="/comments" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="comment" value="<%=comment.id%>">
          <input type="submit" value="DELETE">
        </form>
      <% end %>
    </div>

  </div>
<% end %>


