<ul>
  <% comments.each do |comment| %>
  <li><%= comment.votes.count %> <%= comment.body %> - <%= comment.author_username %> - <%= comment.formatted_post_date %></li>
  <div class="edit-comment-button">
    <% if user_is_author(comment.author_id) %>
      <a href="/comments/<%=comment.id%>/edit">Edit</a>
    <% end %>
  </div>
  <% end %>
</ul>
